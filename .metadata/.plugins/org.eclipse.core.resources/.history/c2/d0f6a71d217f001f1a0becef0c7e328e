package DataTypes;

public class Control_Statements_2 {

    public static void main(String[] args) {
        // Declare and initialize two integer variables x and y
        int x = 300;
        int y = 200;
        
        // Check which number is larger using the if-else statement
        if (x > y)  // If x is greater than y, the condition is true
        {
            System.out.println("X is the Largest Number"); // Output if x is greater than y
        }
        else  // If x is not greater than y, it means y is larger
        {
            System.out.println("Y is the Largest Number"); // Output if y is greater than or equal to x
        }
    }
}

        // Declare and initialize three integer variables x, y, and z
        int x = 100;
        int y = 200;
        int z = 150;
        
        // Check which number is the largest
        if (x >= y && x >= z)  // If x is greater than or equal to both y and z
        {
            System.out.println("X is the Largest Number");
        }
        else if (y >= x && y >= z)  // If y is greater than or equal to both x and z
        {
            System.out.println("Y is the Largest Number");
        }
        else  // If the above conditions are false, z must be the largest
        {
            System.out.println("Z is the Largest Number");
        }
    }

