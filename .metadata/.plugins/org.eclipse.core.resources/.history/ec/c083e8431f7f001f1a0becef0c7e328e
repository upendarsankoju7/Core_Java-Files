package DataTypes;

public class Control_Statements {

    public static void main(String[] args) {
        // TODO Auto-generated method stub
        
        int sum = 11;  // Declare and initialize an integer variable sum with a value of 11
        
        // Check if the number is even or odd using the if-else statement
        if (sum % 2 == 0) // If the remainder when dividing sum by 2 is 0, it is an even number
        {
            System.out.println("It is an even number"); // Output if the condition is true
        }
        else // If the remainder is not 0, it is an odd number
        {
            System.out.println("It is an odd number"); // Output if the condition is false
        }
    }
}
